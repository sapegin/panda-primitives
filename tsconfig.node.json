{
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}
